{
    "name": "gumdrops",
    "version": "1.2.2",
    "description": "GumGum's React Components Library",
    "license": "MIT",
    "files": [
        "dist"
    ],
    "main": "dist/index.cjs.js",
    "module": "dist/index.js",
    "scripts": {
        "start": "yarn run storybook",
        "storybook": "start-storybook -p 6006",
        "prebuild": "rimraf dist",
        "build": "node tools/build",
        "buildstorybook": "build-storybook -c .storybook -o build",
        "publish-pack": "env PUBLISH_PACK=1 node tools/build",
        "prepare": "npm run build",
        "lint": "eslint ./components --color",
        "test": "snyk test && storyshots",
        "preclean": "rimraf node_modules",
        "clean": "yarn cache clean && yarn install",
        "prettier": "prettier \"*/**/*.{js,jsx,json,css,scss}\" --ignore-path ./.prettierignore --write && git status"
    },
    "pre-commit": [
        "prettier"
    ],
    "repository": {
        "type": "git",
        "url": "git@github.com:gumgum/gumdrops.git"
    },
    "peerDependencies": {
        "react": "^16.2.0",
        "react-dom": "^16.2.0"
    },
    "dependencies": {
        "classnames": "^2.2.5",
        "react-modal": "^3.1.7"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.0.0-beta.34",
        "@storybook/addon-actions": "^3.4.3",
        "@storybook/addon-info": "^3.4.3",
        "@storybook/addon-knobs": "^3.4.3",
        "@storybook/addon-options": "^3.4.3",
        "@storybook/react": "^3.4.3",
        "babel": "^6.5.2",
        "babel-cli": "^6.24.1",
        "babel-core": "^6.14.0",
        "babel-eslint": "^7.1.1",
        "babel-loader": "^7.1.2",
        "babel-plugin-external-helpers": "^6.22.0",
        "babel-plugin-istanbul": "^4.0.0",
        "babel-plugin-transform-react-remove-prop-types": "^0.4.13",
        "babel-plugin-transform-runtime": "^6.15.0",
        "babel-polyfill": "^6.13.0",
        "babel-preset-env": "^1.6.1",
        "babel-preset-react": "^6.11.1",
        "babel-preset-stage-0": "^6.24.1",
        "babel-runtime": "^6.11.6",
        "eslint": "^3.18.0",
        "eslint-plugin-react": "^6.10.3",
        "jest-cli": "^19.0.2",
        "prettier": "1.10.2",
        "prop-types": "^15.6.1",
        "raw-loader": "^0.5.1",
        "react": "^16.2.0",
        "react-dom": "^16.2.0",
        "rimraf": "^2.6.1",
        "rollup": "^0.56.3",
        "rollup-plugin-babel": "^3.0.3",
        "rollup-plugin-commonjs": "^8.3.0",
        "rollup-plugin-node-resolve": "^3.0.3",
        "rollup-plugin-uglify": "^3.0.0",
        "snyk": "^1.69.9",
        "storybook-readme": "^3.3.0",
        "style-loader": "^0.12.3"
    }
}
